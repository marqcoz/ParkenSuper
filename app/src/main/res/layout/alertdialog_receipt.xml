<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/linearLayoutMC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="12dp">

        <TextView
            android:id="@+id/textViewMC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto Cobrado"
            android:textAlignment="center"
            android:fontFamily="@font/source_sans_pro"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewMontoCobrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="$ 0.00 MXN"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/source_sans_pro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutMC"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textViewT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo"
            android:fontFamily="@font/source_sans_pro"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="30 minutos"
            android:textAlignment="center"
            android:fontFamily="@font/source_sans_pro"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuerda al automovilista liberar el espacio a las:"
            android:textAlignment="center"
            android:fontFamily="@font/source_sans_pro"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewRecordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:00 hrs"
            android:textAlignment="center"
            android:fontFamily="@font/source_sans_pro"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTime"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/source_sans_pro"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>